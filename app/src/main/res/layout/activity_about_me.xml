<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wangsheng.sharecampus.activity.AboutMeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:fitsSystemWindows="true"
            android:id="@+id/iv_my_bg"
            android:layout_width="match_parent"
            android:background="@drawable/guilty_crown"
            android:scaleType="centerCrop"
            android:layout_height="280dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_user_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/kangna"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"
            android:layout_marginTop="56dp"/>

        <com.wangsheng.sharecampus.view.IconTextView
            android:id="@+id/tv_user_name"
            app:iconWidth="15dp"
            app:iconHeight="15dp"
            android:drawableRight="@drawable/ic_sex_secret"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="陌上疏影凉"
            android:textColor="@color/white"
            android:layout_below="@id/civ_user_icon"
            android:layout_centerHorizontal="true"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="简介:呀哈喽！"
            android:maxLines="2"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_below="@id/tv_user_name"
            android:layout_margin="8dp"/>



    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_scrollFlags="scroll|enterAlways|snap">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_toolbar_back" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/task_share" />


    </android.support.v7.widget.Toolbar>

    <TableLayout

        android:background="@color/blue_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TableLayout>




</RelativeLayout>
