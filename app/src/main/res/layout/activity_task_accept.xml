<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wangsheng.sharecampus.activity.TaskAcceptActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="任务信息"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="30dp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:paddingRight="16dp"
                android:paddingLeft="8dp"
                android:background="@drawable/bg_integrity"
                android:paddingBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/dark_gray"
                    android:text="\@陌上疏影凉"
                    android:textAlignment="center"
                    android:maxLines="2"
                    />

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/dark_black"
                    android:text="【代取申通快递】"
                    android:textAlignment="center"
                    android:maxLines="2"
                    />

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/brown_primary"
                    android:text="￥2.00"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/kangna"
                android:layout_margin="8dp"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="任务已成功接收!"
                android:textColor="@color/dark_black"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginTop="32dp"
                android:background="@color/white"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:padding="4dp"
                android:textAlignment="center"
                android:text="任务编号:123424"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="感谢您对校园江湖的信任，期待您再次光临"
                android:textAlignment="center"
                android:textColor="@color/dark_gray"
                android:padding="8dp"
                android:textSize="12sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="返回主界面"
                    android:textColor="@color/white"
                    android:layout_margin="8dp"
                    android:background="@drawable/selector_button_confirm"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="联系发布人"
                    android:textColor="@color/white"
                    android:layout_margin="8dp"
                    android:background="@drawable/selector_button_confirm"/>
            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/toolbar"
        android:background="@drawable/gradient_reverse"/>

</RelativeLayout>
