<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/white"
    android:elevation="1dp"
    android:gravity="center"
    app:cardCornerRadius="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/intask_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="代取申通快递"
                android:textColor="@color/dark_black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/intask_text_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="你好你好"
                android:textColor="@color/dark_black"
                android:textSize="20sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.ruffian.library.RTextView
                android:id="@+id/intask_text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="你好你好"
                android:textColor="@color/black_primary"
                android:textSize="15dp"
                app:border_width_normal="1dp"
                app:border_width_pressed="1dp"
                app:border_width_unable="1dp"
                app:border_color_normal="@color/black_primary"
                app:border_color_pressed="@color/black_primary"
                app:border_color_unable="@color/black_primary"
                app:background_normal="@color/blue_light"
                app:background_pressed="@color/blue_light"
                app:background_unable="@color/blue_light"
                android:padding="3dp"
                app:corner_radius="5dp"/>

            <com.wangsheng.sharecampus.view.IconTextView
                android:id="@+id/intask_text_price"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:drawableLeft="@drawable/task_price"
                android:drawablePadding="4dp"
                android:drawableTint="@color/blue_light"
                android:gravity="center_vertical"
                android:text="2金"
                android:textColor="@color/dark_black"
                android:textSize="15sp"
                app:iconHeight="20dp"
                app:iconWidth="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/intask_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="你好你好"
                android:textColor="@color/dark_black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/intask_text_showtimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="你好你好"
                android:textColor="@color/dark_black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/intask_text_resttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="你好你好"
                android:textColor="@color/dark_black"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/intask_text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="内容"
            android:textColor="@color/dark_black"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/intask_text_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/selector_label_bg"
                android:text="查看详情"
                android:textColor="@color/dark_black"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray_line" />
    </LinearLayout>
</android.support.v7.widget.CardView>
