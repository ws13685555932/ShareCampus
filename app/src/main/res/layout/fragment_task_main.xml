<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ciriv_user_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="left"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/kangna" />

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_toolbar_location"/>

            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_tv_search"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_height="32dp">

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_search"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="18dp"
                    android:background="#ffffff"
                    android:text="搜索任务关键字"
                    android:gravity="center_vertical"
                    android:textColor="#4d4d4d"
                    android:textSize="14sp" />

            </LinearLayout>


        </android.support.v7.widget.Toolbar>

            <android.support.v7.widget.Toolbar
                android:visibility="gone"
                android:id="@+id/toolbar_search"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_scrollFlags="scroll|enterAlways|snap">

                <TextView
                    android:id="@+id/iv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="16dp"
                    android:text="取消"
                    android:textColor="@color/liji_c_blue"
                    android:textSize="20dp" />
                <RelativeLayout
                    android:background="@drawable/bg_tv_search2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:id="@+id/image_search"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_search"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />
                    <EditText
                        android:id="@+id/edit_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/image_search"
                        android:layout_marginRight="20dp"
                        android:hint="搜索任务关键字"
                        android:textColor="@color/dark_black"
                        android:textColorHint="@color/gray_line"
                        android:background="@null"
                        android:lines="1"/>

                    <ImageView
                        android:id="@+id/image_cancel"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_cancel"/>

                </RelativeLayout>


            </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_task"/>

</LinearLayout>